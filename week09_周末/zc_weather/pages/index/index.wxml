<view class="container">
  <picker mode="region" bindchange="regionchange">
    <view>{{region}}</view>
  </picker>

  <view>{{page_temp.temp}}°C{{page_temp.text}}</view>

  <image src="/images/weather_icon/{{page_temp.icon}}.png"></image>



  <view class="detail">
    <view class="bar">
      <view class="box">湿度</view>
      <view class="box">气压</view>
      <view class="box">能见度</view>
    </view>
    <view class="bar">
      <view class="box">{{page_temp.humidity}}%</view>
      <view class="box">{{page_temp.pressure}}hPa </view>
      <view class="box">{{page_temp.vis}}km </view>
    </view>
    <view class="bar">
      <view class="box">风向</view>
      <view class="box">风速</view>
      <view class="box">风力</view>
    </view>
    <view class="bar">
      <view class="box">{{page_temp.windDir}}</view>
      <view class="box">{{page_temp.windScale}} km/h</view>
      <view class="box">{{page_temp.windSpeed}} 级</view>
    </view>
  </view>
</view>